# -----------------------------------------------------------------------------
# package config
# -----------------------------------------------------------------------------



# -----------------------------------------------------------------------------
# vm-start
# -----------------------------------------------------------------------------

vm-start::
	vagrant up

vm:: vm-start


# -----------------------------------------------------------------------------
# vm-stop
# -----------------------------------------------------------------------------

vm-stop::
	vagrant halt


# -----------------------------------------------------------------------------
# vm-provision
# -----------------------------------------------------------------------------

vm-provision::
	vagrant rsync
	vagrant provision


# -----------------------------------------------------------------------------
# vm-restart
# -----------------------------------------------------------------------------

vm-restart::
	vagrant halt
	vagrant up


# -----------------------------------------------------------------------------
# vm-recreate
# -----------------------------------------------------------------------------

vm-recreate::
	vagrant destroy
	vagrant up


# -----------------------------------------------------------------------------
# vm-destroy
# -----------------------------------------------------------------------------

vm-destroy::
	vagrant destroy


# -----------------------------------------------------------------------------
# vm-portforwards
# -----------------------------------------------------------------------------

vm-portforwards::
	vagrant ssh -- \
		-l dev \
		-A \
		-L8000:127.0.0.1:8000 \
		-L8080:127.0.0.1:8080 \
		-L8081:127.0.0.1:8081 \
		-L8089:127.0.0.1:8089 \
		-L8888:127.0.0.1:8888 \
		-L9090:127.0.0.1:9090 \
		-L9999:127.0.0.1:9999 \
		-L4200:127.0.0.1:4200


portforwards:: vm-portforwards

pf:: vm-portforwards


# -----------------------------------------------------------------------------
# vm-ssh
# -----------------------------------------------------------------------------

vm-ssh::
	vagrant ssh -- -l dev -A

ssh:: vm-ssh
